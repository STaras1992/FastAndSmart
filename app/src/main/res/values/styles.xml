<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DialogEndGame" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowAnimationStyle">@style/animation</item>
    </style>

    <style name="DialogStageComlete" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowAnimationStyle">@style/animation</item>
    </style>

    <style name="animation">
        <!-- Customize your theme here. -->
         <item name = "android:windowEnterAnimation">@android:anim/slide_in_left</item>
        <item name = "android:windowExitAnimation">@android:anim/slide_out_right</item>
    </style>

    <style name="activity_animation">
        <!-- Customize your theme here. -->
        <item name = "android:activityOpenEnterAnimation">@android:anim/fade_in</item>
        <item name = "android:activityOpenExitAnimation">@android:anim/fade_out</item>
        <item name="android:activityCloseEnterAnimation">@android:anim/fade_in</item>
        <item name="android:activityCloseExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="CustomShowcaseTheme" parent="ShowcaseView.Light">
        <item name="sv_backgroundColor">#3314FF43</item>
        <item name="sv_showcaseColor">#00801A</item>
        <item name="sv_buttonText">Ok</item>
        <item name="sv_tintButtonColor">false</item>
        <item name="sv_titleTextAppearance">@style/CustomTitle2</item>
        <item name="sv_detailTextAppearance">@style/CustomText2</item>
    </style>

    <style name="CustomShowcaseTheme2" parent="ShowcaseView">
        <item name="sv_backgroundColor">#E51655F8</item>
        <item name="sv_showcaseColor">#082281</item>
        <item name="sv_buttonText">Ok</item>
        <item name="sv_titleTextAppearance">@style/CustomTitle2</item>
        <item name="sv_detailTextAppearance">@style/CustomText2</item>
    </style>

    <style name="CustomShowcaseTheme3" parent="ShowcaseView.Light">
        <item name="sv_backgroundColor">#c8ed680f</item>
        <item name="sv_showcaseColor">#ed680f</item>
        <item name="sv_buttonText">Hide</item>
        <item name="sv_tintButtonColor">false</item>
        <item name="sv_titleTextAppearance">@style/CustomTitle2</item>
        <item name="sv_detailTextAppearance">@style/CustomText2</item>
    </style>

    <style name="CustomTitle" parent="TextAppearance.ShowcaseView.Title">
        <item name="android:textColor">#00801A</item>

    </style>

    <style name="CustomTitle2" parent="TextAppearance.ShowcaseView.Title.Light">
        <item name="android:textColor">#DE050000</item>
        <item name="android:textSize">26sp</item>
    </style>

    <style name="CustomText2" parent="TextAppearance.ShowcaseView.Detail.Light">
        <item name="android:textColor">#DEFFFFFF</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ok_button" parent="ShowcaseButton">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>

    <style name="level_button_locked" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/level_button_locked</item>
        <item name="android:textColor">@color/text_white</item>
        <item name="android:clickable">false</item>
    </style>

    <style name="level_button_unlocked" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/level_button_unlocked</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="level_button_completed" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/level_button_completed</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:clickable">true</item>
    </style>



</resources>
