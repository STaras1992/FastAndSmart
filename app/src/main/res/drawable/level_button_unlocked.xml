<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true" android:state_pressed="false">
        <shape android:shape="rectangle">
            <corners android:radius="20dp"/>
            <gradient
                android:startColor="@color/colorLevelButtonPressed"
                android:endColor="@color/colorLevelButtonPressed"
                android:centerColor="#FF69D9"
                android:gradientRadius="30dp"
                />
            <padding android:left="12dp"
                android:right="12dp"
                android:top="18dp"
                android:bottom="18dp"/>
            <stroke android:width="2dp"
                android:color="@android:color/black"/>
        </shape>
    </item>

    <item android:state_enabled="true" android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="20dp"/>
            <gradient
                android:startColor="@color/colorLevelButton"
                android:endColor="@color/colorLevelButton"
                android:centerColor="#F8E966"
                android:gradientRadius="30dp"
                />
            <padding android:left="12dp"
                android:right="12dp"
                android:top="18dp"
                android:bottom="18dp"/>
            <stroke android:width="2dp"
                android:color="@android:color/black"/>
        </shape>
    </item>

</selector>


