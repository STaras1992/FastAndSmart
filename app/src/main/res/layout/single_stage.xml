<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".StageActivity"
    >

    <TextView
        android:id="@+id/single_stage_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Basic"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="@color/stage_description_text"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        />

    <ImageView
        android:id="@+id/single_stage_image"
        android:layout_width="183dp"
        android:layout_height="172dp"
        android:layout_below="@id/single_stage_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:src="@drawable/androidapple" />

    <TextView
        android:id="@+id/description_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/single_stage_image"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:textSize="24sp"
        android:textStyle="italic"
        android:textColor="@color/stage_description_text"
        />

</RelativeLayout>